<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TodoList.ViewModels"
             x:Class="TodoList.Views.MainPage">

    <ContentPage.BindingContext>
        <local:MainViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Entry x:Name="TaskEntry"
               Placeholder="Adicionar nova tarefa"
               Text="{Binding NewTaskText, Mode=TwoWay}" />

        <Button Text="Adicionar"
                Command="{Binding AddTaskCommand}" />

        <ListView ItemsSource="{Binding NewTasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Concluir"
                                               BackgroundColor="Green"
                                               Command="{Binding Source={x:Reference MainPage}, Path=BindingContext.CompleteTaskCommand}"
                                               CommandParameter="{Binding}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem Text="Arquivar"
                                               BackgroundColor="Blue"
                                               Command="{Binding Source={x:Reference MainPage}, Path=BindingContext.ArchiveTaskCommand}"
                                               CommandParameter="{Binding}" />
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <Grid Padding="10">
                                <Label Text="{Binding Title}" 
                                       FontSize="18"
                                       VerticalOptions="Center"
                                       TextColor="White"/>
                            </Grid>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
